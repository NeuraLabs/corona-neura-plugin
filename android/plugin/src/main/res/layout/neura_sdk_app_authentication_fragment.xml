<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/neura_sdk_light_gray_fill_selected"
    android:orientation="vertical">

    <com.neura.dashboard.view.widget.NeuraMessageSpitter
        android:id="@+id/app_authentication_fragment_message_spitter_loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.neura.dashboard.view.PermissionsMessageSpitter
        android:id="@+id/app_authentication_fragment_message_spitter"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ProgressBar
        android:id="@+id/app_authentication_fragment_center_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

</RelativeLayout>