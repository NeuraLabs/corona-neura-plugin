<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/neura_sdk_privacy_background"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/privacy_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:src="@drawable/neura_sdk_privacy_declaration_bg_pattern" />

    <ImageView
        android:id="@+id/privacy_shield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/privacy_text"
        android:layout_alignTop="@+id/privacy_text"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/neura_sdk_declaration_shield" />

    <com.neura.dashboard.view.widget.RobotoRegularTextView
        android:id="@+id/privacy_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacy_header"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/privacy_shield"
        android:text="@string/neura_sdk_privacy_text_place"
        android:textColor="@color/neura_sdk_privacy_text"
        android:textSize="12sp" />
</RelativeLayout>